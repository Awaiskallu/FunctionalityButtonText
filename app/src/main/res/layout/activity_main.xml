<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <!-- Show Button Types -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <Button
        android:id="@+id/showButtonTypes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Button Types"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Show Text Types -->
    <Button
        android:id="@+id/showTextTypes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Text Types"
        android:layout_below="@id/showButtonTypes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Normal Button -->
    <Button
        android:id="@+id/normalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Normal Button"
        android:layout_below="@id/showTextTypes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <!-- Text Button -->
    <Button
        android:id="@+id/textButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Button"
        android:layout_below="@id/normalButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

    <!-- Filled Button -->
    <Button
        android:id="@+id/filledButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filled Button"
        android:layout_below="@id/textButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        style="@style/Widget.MaterialComponents.Button"/>

    <!-- Elevated Button -->
    <Button
        android:id="@+id/elevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elevated Button"
        android:layout_below="@id/filledButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        style="@style/Widget.MaterialComponents.Button"/>

    <!-- Filled Tonal Button -->
    <Button
        android:id="@+id/filledTonalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filled Tonal Button"
        android:layout_below="@id/elevatedButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        style="@style/Button.FilledTonal"/>
    <!-- Outlined Button -->
    <Button
        android:id="@+id/outlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outlined Button"
        android:layout_below="@id/filledTonalButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <!-- Icon Button -->

            <!-- Segmented Button -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/segmentedButtonGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iconButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:singleSelection="true"
        tools:ignore="NotSibling">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/segmentedButton1"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Segment 1"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/segmentedButton2"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Segment 2"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/segmentedButton3"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Segment 3"/>

        <ImageButton
            android:id="@+id/iconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@android:drawable/ic_menu_search"
            android:visibility="gone" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Floating Action Button (FAB) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_dialog_email"
        android:layout_below="@id/segmentedButtonGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <!-- Extended FAB -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/extendedFab"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extended FAB"
        android:layout_below="@id/fab"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <!-- Text Views -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample TextView 1"
        android:layout_below="@id/extendedFab"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample TextView 2"
        android:layout_below="@id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>

    <!-- Text Input Fields -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Text1"
            android:backgroundTint="@color/colorAccent"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textInputLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Text2"
            android:backgroundTint="@color/colorAccent"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Add more elements as needed -->
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

